/**index.wxss**/

#title{
  margin-top: 20px;
  margin-bottom: 20px;
}

#title>image{
  height: 80px;
  padding: 0;
  margin: 0;
  /*调整宽度*/
  /*height: 60px;*/
  mode: widthFix;
  /*width: 330rpx;*/
  width: 400rpx;

}

form{
  padding-top: 0;
  margin-top: 0;
}

#view{
  background-image: url("CSSQuery.png");
}

#search{
    width: 80%;
    height: 50px;
    margin: 0 auto;
    display: block;
    border: 0;
    background:none;
    text-align: center;
    font-size: 1em; 
    border: 2px solid #3a5286;
    border-radius: 17px;
    width: 80%;
    padding: 20px auto;
    outline: none;
    transition: 0.25s;
    /*margin-top: 30%;*/
    color: rgb(37, 32, 32);

}

.scrollview{
  font-style: italic;
  font-weight: 300;
}

.i-btn-primary{
  width: 80px;
  margin: auto;
}

.gap{
  width: 100%;
  height: 10px;
}

icon[type=search]{
  margin-top: 10px;
}

.space{
  margin: 0 2px;
  display: inline;
}

#tip{
  font-weight: 300;
  font-size: 0.8em;
  font-style: italic;
}

@font-face{
  font-family: NotoSans;
  src: url("https://file.ourfor.top/tools/NotoSansSC-Regular.ttf")
}

page {
  font-family: NotoSans;
}

page {
  background:#fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: center;  
  width: 100%;
  padding: 0;
  margin: 0;
  background-image: url("data:image/svg+xml;base64,")
}

